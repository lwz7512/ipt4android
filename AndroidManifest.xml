                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>        
        </activity>  
        <!-- 俺滴品图 -->
        <activity android:name=".activity.AndiPintu">
            <intent-filter>
                <action android:name="com.pintu.activity.adpintu"/>
