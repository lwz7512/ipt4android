<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<!-- 基本信息 -->
	<include layout="@layout/userinfo" />
	<!-- 财富信息 -->
	<LinearLayout android:id="@+id/wealthset"
		android:orientation="vertical" android:layout_width="match_parent"
		android:layout_height="match_parent" android:paddingLeft="10dp"
		android:paddingTop="10dp">
		<!-- 海贝 -->
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:id="@+id/seashell" android:layout_width="36dp"
				android:layout_height="36dp" android:src="@drawable/shell_sea" />
			<TextView android:id="@+id/seashell_num"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="0" android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp" />
		</LinearLayout>
		<!-- 铜贝 -->
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:id="@+id/coppershell"
				android:layout_width="36dp" android:layout_height="36dp"
				android:src="@drawable/shell_copper" />
			<TextView android:id="@+id/coppershell_num"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="0" android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp" />
		</LinearLayout>
		<!-- 银贝 -->
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:id="@+id/silvershell"
				android:layout_width="36dp" android:layout_height="36dp"
				android:src="@drawable/shell_silver" />
			<TextView android:id="@+id/silvershell_num"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="0" android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp" />
		</LinearLayout>
		<!-- 金贝 -->
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:id="@+id/goldshell"
				android:layout_width="36dp" android:layout_height="36dp"
				android:src="@drawable/shell_gold" />
			<TextView android:id="@+id/goldshell_num"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="0" android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp" />
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
