<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:paddingLeft="4dp"
	android:paddingRight="4dp" android:paddingTop="4dp">
	<!-- 消息发送人头像 -->
	<ImageView android:id="@+id/sender_img"
		android:layout_marginRight="4dp" android:layout_width="60dp"
		android:layout_height="60dp" android:src="@drawable/user_default_photo" />
	<!-- 消息主体 -->
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:paddingLeft="10dp"
		android:paddingRight="10dp">
		<!-- 发送人 -->
		<TextView android:id="@+id/msg_sender" android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="@style/LinkText" />

		<!-- 内容 -->
		<TextView android:id="@+id/msg_content" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_below="@id/msg_sender"
			android:layout_alignLeft="@id/msg_sender" style="@style/normalText.span" />

		<!-- 发送时间 -->
		<TextView android:id="@+id/msg_pubtime" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_below="@id/msg_content"
			android:layout_alignParentRight="true" />

	</RelativeLayout>

</LinearLayout>	