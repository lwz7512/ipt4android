<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#e7e7e7">
	<!-- Header -->
	<include layout="@layout/header_write" />
	<!-- 选择图片方式 -->
	<LinearLayout android:id="@+id/post_button_bar"
		android:layout_width="fill_parent" android:layout_height="44dp"
		android:layout_alignParentBottom="true" 
		android:paddingTop="0dp" android:paddingBottom="0dp"
		android:background="@drawable/send_message_block">
		<!-- 拍照按钮 -->
		<ImageButton android:layout_gravity="center_vertical"
			android:id="@+id/camera_button" android:background="@null"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/toolbar_camera" android:layout_weight="1" 
			android:paddingTop="0dp" android:paddingBottom="0dp"/>
		<!-- 选择图片 -->
		<ImageButton android:layout_gravity="center_vertical"
			android:id="@+id/choose_images_button" android:background="@null"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/toolbar_media" android:layout_weight="1" 
			android:paddingTop="0dp" android:paddingBottom="0dp"/>
	</LinearLayout>
	<!-- 图片预览 -->
	<ImageView android:id="@+id/preview" android:layout_width="wrap_content"
		android:layout_height="150dp" android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp" android:maxWidth="460px"
		android:scaleType="centerInside" android:src="@drawable/mockpic_gray" />
	<!-- 图片标签 -->
	<EditText android:id="@+id/tags" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="15dp"
		android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
		android:hint="@string/tags" android:maxLength="16" 
		android:imeOptions="actionNext" />
	<!-- 图片描述, amazing layout_weight attribute! -->
	<EditText android:id="@+id/description" android:hint="@string/description"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1" android:textSize="15dp"
		android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp" 
		android:gravity="top" 
		android:imeOptions="actionDone" />
	<!-- 是否为原创 -->
	<CheckBox android:id="@+id/isOriginal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/isOriginal"
		android:textColor="#FF000000" android:layout_margin="2dp"
		/>

</LinearLayout>
